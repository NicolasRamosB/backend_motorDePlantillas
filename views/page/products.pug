doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")

    title Nicolas Ramos - Plantillas

body 

div(class="container")
  nav(class="navbar navbar-expand-lg bg-light")
    div(class="container-fluid")
      a(class="navbar-brand" href="#") Desafio 5
        div(class="navbar-nav")
          a(class="nav-link active" aria-current="page" href="/") Home
          a(class="nav-link" href="/products") Productos

div(class="container")

  div(class="container")
    if products.length == 0
      div(class="alert alert-danger" role="alert")  No se registran productos

    else
    table(class="table")

      thead
        tr
          th(scope="col") #
          th(scope="col") Nombre
          th(scope="col") Precio
          th(scope="col") Imagen

      tbody
        each i in products
          tr
            th(scope="row")= i.id
            td= i.name 
            td $ #{i.price} 
            td
              img(src=i.thumbnail alt=i.id height="50px")



script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")

